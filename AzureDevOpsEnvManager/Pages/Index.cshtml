@page
@model IndexModel
@{
    ViewData["Title"] = "Azure DevOps Environment Manager";
}

<div class="container-fluid">
    <h1 class="display-4 mb-4">Azure DevOps Environment Manager</h1>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success" role="alert">
            @Model.SuccessMessage
        </div>
    }

    <!-- Pipelines Section -->
    <section class="mb-5">
        <h2>Available Pipelines</h2>
        @if (Model.Pipelines.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Path</th>
                            <th>Type</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pipeline in Model.Pipelines)
                        {
                            <tr>
                                <td>@pipeline.Id</td>
                                <td>@pipeline.Name</td>
                                <td>@pipeline.Path</td>
                                <td>@pipeline.Type</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted">No pipelines found.</p>
        }
    </section>

    <!-- Variable Libraries Section -->
    <section class="mb-5">
        <h2>Variable Libraries</h2>
        @if (Model.VariableLibraries.Any())
        {
            @foreach (var library in Model.VariableLibraries)
            {
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h3 class="h5 mb-0">@library.Name (ID: @library.Id)</h3>
                    </div>
                    <div class="card-body">
                        @if (library.Variables.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm table-hover">
                                    <thead>
                                        <tr>
                                            <th>Variable Name</th>
                                            <th>Value</th>
                                            <th style="width: 150px;">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var field in Model.ExpectedFields)
                                        {
                                            var hasValue = library.Variables.ContainsKey(field);
                                            var currentValue = hasValue ? library.Variables[field] : "";
                                            <tr class="@(hasValue ? "" : "table-secondary")">
                                                <td><strong>@field</strong></td>
                                                <td id="value-@library.Id-@field">@(hasValue ? currentValue : "(not set)")</td>
                                                <td>
                                                    <button type="button" class="btn btn-sm btn-primary" onclick="showEditForm('@library.Id', '@field', '@currentValue')">
                                                        Edit
                                                    </button>
                                                </td>
                                            </tr>
                                            <tr id="edit-form-@library.Id-@field" style="display: none;">
                                                <td colspan="3">
                                                    <form method="post" asp-page-handler="UpdateVariable" class="d-flex gap-2 align-items-center">
                                                        <input type="hidden" name="VariableGroupId" value="@library.Id" />
                                                        <input type="hidden" name="VariableName" value="@field" />
                                                        <div class="flex-grow-1">
                                                            <input type="text" name="VariableValue" class="form-control" value="@currentValue" placeholder="Enter new value" />
                                                        </div>
                                                        <button type="submit" class="btn btn-sm btn-success">Save</button>
                                                        <button type="button" class="btn btn-sm btn-secondary" onclick="hideEditForm('@library.Id', '@field')">Cancel</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                        @* Display other variables that are not in the expected list *@
                                        @foreach (var variable in library.Variables.Where(v => !Model.ExpectedFields.Contains(v.Key)))
                                        {
                                            <tr>
                                                <td>@variable.Key</td>
                                                <td id="value-@library.Id-@variable.Key">@variable.Value</td>
                                                <td>
                                                    <button type="button" class="btn btn-sm btn-primary" onclick="showEditForm('@library.Id', '@variable.Key', '@variable.Value')">
                                                        Edit
                                                    </button>
                                                </td>
                                            </tr>
                                            <tr id="edit-form-@library.Id-@variable.Key" style="display: none;">
                                                <td colspan="3">
                                                    <form method="post" asp-page-handler="UpdateVariable" class="d-flex gap-2 align-items-center">
                                                        <input type="hidden" name="VariableGroupId" value="@library.Id" />
                                                        <input type="hidden" name="VariableName" value="@variable.Key" />
                                                        <div class="flex-grow-1">
                                                            <input type="text" name="VariableValue" class="form-control" value="@variable.Value" placeholder="Enter new value" />
                                                        </div>
                                                        <button type="submit" class="btn btn-sm btn-success">Save</button>
                                                        <button type="button" class="btn btn-sm btn-secondary" onclick="hideEditForm('@library.Id', '@variable.Key')">Cancel</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No variables in this library.</p>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted">No variable libraries found.</p>
        }
    </section>
</div>

<script>
    function showEditForm(groupId, fieldName, currentValue) {
        // Hide all other edit forms
        document.querySelectorAll('[id^="edit-form-"]').forEach(form => {
            form.style.display = 'none';
        });
        
        // Show the selected edit form
        const editForm = document.getElementById(`edit-form-${groupId}-${fieldName}`);
        if (editForm) {
            editForm.style.display = '';
        }
    }

    function hideEditForm(groupId, fieldName) {
        const editForm = document.getElementById(`edit-form-${groupId}-${fieldName}`);
        if (editForm) {
            editForm.style.display = 'none';
        }
    }
</script>
