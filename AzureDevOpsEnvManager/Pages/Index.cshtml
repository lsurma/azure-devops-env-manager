@page
@model IndexModel
@{
    ViewData["Title"] = "Azure DevOps Environment Manager";
}

<div class="container-fluid">
    <h1 class="display-4 mb-4">Azure DevOps Environment Manager</h1>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success" role="alert">
            @Model.SuccessMessage
        </div>
    }

    <!-- Pipelines Section -->
    <section class="mb-5">
        <h2>Available Pipelines</h2>
        @if (Model.Pipelines.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Path</th>
                            <th>Type</th>
                            <th style="width: 150px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pipeline in Model.Pipelines)
                        {
                            <tr>
                                <td>@pipeline.Id</td>
                                <td>@pipeline.Name</td>
                                <td>@pipeline.Path</td>
                                <td>@pipeline.Type</td>
                                <td>
                                    <form method="post" asp-page-handler="RunPipeline" style="display: inline;">
                                        <input type="hidden" name="PipelineId" value="@pipeline.Id" />
                                        <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Are you sure you want to run this pipeline?');">
                                            Run
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted">No pipelines found.</p>
        }
    </section>

    <!-- Variable Libraries Section -->
    <section class="mb-5">
        <h2>Variable Libraries</h2>
        @if (Model.VariableLibraries.Any())
        {
            @foreach (var library in Model.VariableLibraries)
            {
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h3 class="h5 mb-0">@library.Name (ID: @library.Id)</h3>
                        <button type="button" class="btn btn-sm btn-light" onclick="showCloneModal(@library.Id, '@Html.Raw(System.Text.Json.JsonSerializer.Serialize(library.Variables.Keys).Replace("\"", "&quot;"))')">
                            Clone as Template
                        </button>
                    </div>
                    <div class="card-body">
                        @if (library.Variables.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm table-hover">
                                    <thead>
                                        <tr>
                                            <th>Variable Name</th>
                                            <th>Value</th>
                                            <th style="width: 150px;">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var field in Model.ExpectedFields)
                                        {
                                            var hasValue = library.Variables.ContainsKey(field);
                                            var currentValue = hasValue ? library.Variables[field] : "";
                                            var sanitizedFieldId = $"{library.Id}-{field.GetHashCode()}";
                                            <tr class="@(hasValue ? "" : "table-secondary")">
                                                <td><strong>@field</strong></td>
                                                <td id="value-@sanitizedFieldId">@(hasValue ? currentValue : "(not set)")</td>
                                                <td>
                                                    <button type="button" class="btn btn-sm btn-primary" 
                                                            data-group-id="@library.Id" 
                                                            data-field-name="@field" 
                                                            data-field-id="@sanitizedFieldId"
                                                            onclick="showEditForm(this)">
                                                        Edit
                                                    </button>
                                                </td>
                                            </tr>
                                            <tr id="edit-form-@sanitizedFieldId" style="display: none;">
                                                <td colspan="3">
                                                    <form method="post" asp-page-handler="UpdateVariable" class="d-flex gap-2 align-items-center">
                                                        <input type="hidden" name="VariableGroupId" value="@library.Id" />
                                                        <input type="hidden" name="VariableName" value="@field" />
                                                        <div class="flex-grow-1">
                                                            <input type="text" name="VariableValue" class="form-control" value="@currentValue" placeholder="Enter new value" />
                                                        </div>
                                                        <button type="submit" class="btn btn-sm btn-success">Save</button>
                                                        <button type="button" class="btn btn-sm btn-secondary" 
                                                                data-field-id="@sanitizedFieldId"
                                                                onclick="hideEditForm(this)">Cancel</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                        @* Display other variables that are not in the expected list *@
                                        @foreach (var variable in library.Variables.Where(v => !Model.ExpectedFields.Contains(v.Key)))
                                        {
                                            var sanitizedFieldId = $"{library.Id}-{variable.Key.GetHashCode()}";
                                            <tr>
                                                <td>@variable.Key</td>
                                                <td id="value-@sanitizedFieldId">@variable.Value</td>
                                                <td>
                                                    <button type="button" class="btn btn-sm btn-primary" 
                                                            data-group-id="@library.Id" 
                                                            data-field-name="@variable.Key" 
                                                            data-field-id="@sanitizedFieldId"
                                                            onclick="showEditForm(this)">
                                                        Edit
                                                    </button>
                                                </td>
                                            </tr>
                                            <tr id="edit-form-@sanitizedFieldId" style="display: none;">
                                                <td colspan="3">
                                                    <form method="post" asp-page-handler="UpdateVariable" class="d-flex gap-2 align-items-center">
                                                        <input type="hidden" name="VariableGroupId" value="@library.Id" />
                                                        <input type="hidden" name="VariableName" value="@variable.Key" />
                                                        <div class="flex-grow-1">
                                                            <input type="text" name="VariableValue" class="form-control" value="@variable.Value" placeholder="Enter new value" />
                                                        </div>
                                                        <button type="submit" class="btn btn-sm btn-success">Save</button>
                                                        <button type="button" class="btn btn-sm btn-secondary" 
                                                                data-field-id="@sanitizedFieldId"
                                                                onclick="hideEditForm(this)">Cancel</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No variables in this library.</p>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted">No variable libraries found.</p>
        }
    </section>
</div>

<!-- Clone Variable Group Modal -->
<div class="modal fade" id="cloneModal" tabindex="-1" aria-labelledby="cloneModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cloneModalLabel">Clone Variable Group as Template</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-page-handler="CreateFromTemplate" id="cloneForm">
                <div class="modal-body">
                    <input type="hidden" name="TemplateGroupId" id="templateGroupId" />
                    <div class="mb-3">
                        <label for="newGroupName" class="form-label">New Variable Group Name</label>
                        <input type="text" class="form-control" id="newGroupName" name="NewGroupName" required />
                        <div class="form-text">Enter a unique name for the new variable group.</div>
                    </div>
                    <hr />
                    <h6>Variable Values</h6>
                    <p class="text-muted small">Enter new values for each variable. Leave blank to keep the original value.</p>
                    <div id="variableFields"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Variable Group</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function showEditForm(button) {
        // Hide all other edit forms
        document.querySelectorAll('[id^="edit-form-"]').forEach(form => {
            form.style.display = 'none';
        });
        
        // Get the field ID from data attribute
        const fieldId = button.getAttribute('data-field-id');
        
        // Show the selected edit form
        const editForm = document.getElementById(`edit-form-${fieldId}`);
        if (editForm) {
            editForm.style.display = '';
        }
    }

    function hideEditForm(button) {
        const fieldId = button.getAttribute('data-field-id');
        const editForm = document.getElementById(`edit-form-${fieldId}`);
        if (editForm) {
            editForm.style.display = 'none';
        }
    }

    function showCloneModal(groupId, variableNamesJson) {
        // Set the template group ID
        document.getElementById('templateGroupId').value = groupId;
        
        // Clear the new group name
        document.getElementById('newGroupName').value = '';
        
        // Parse variable names
        const variableNames = JSON.parse(variableNamesJson.replace(/&quot;/g, '"'));
        
        // Generate input fields for each variable
        const container = document.getElementById('variableFields');
        container.innerHTML = '';
        
        variableNames.forEach(varName => {
            const fieldGroup = document.createElement('div');
            fieldGroup.className = 'mb-3';
            
            const label = document.createElement('label');
            label.className = 'form-label';
            label.textContent = varName;
            
            const input = document.createElement('input');
            input.type = 'text';
            input.className = 'form-control';
            input.name = 'var_' + varName;
            input.placeholder = 'Enter new value or leave blank';
            
            fieldGroup.appendChild(label);
            fieldGroup.appendChild(input);
            container.appendChild(fieldGroup);
        });
        
        // Show the modal
        const modal = new bootstrap.Modal(document.getElementById('cloneModal'));
        modal.show();
    }
</script>

