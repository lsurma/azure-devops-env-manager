@page
@model IndexModel
@{
    ViewData["Title"] = "Azure DevOps Environment Manager";
}

<div class="container-fluid">
    <h1 class="display-4 mb-4">Azure DevOps Environment Manager</h1>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success" role="alert">
            @Model.SuccessMessage
        </div>
    }

    <!-- Pipelines Section -->
    <section class="mb-5">
        <h2>Available Pipelines</h2>
        @if (Model.Pipelines.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Path</th>
                            <th>Type</th>
                            <th style="width: 150px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pipeline in Model.Pipelines)
                        {
                            <tr>
                                <td>@pipeline.Id</td>
                                <td>@pipeline.Name</td>
                                <td>@pipeline.Path</td>
                                <td>@pipeline.Type</td>
                                <td>
                                    <form method="post" asp-page-handler="RunPipeline" style="display: inline;">
                                        <input type="hidden" name="PipelineId" value="@pipeline.Id" />
                                        <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Are you sure you want to run this pipeline?');">
                                            Run
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted">No pipelines found.</p>
        }
    </section>

    <!-- Variable Libraries Section -->
    <section class="mb-5">
        <h2>Variable Libraries</h2>
        @if (Model.VariableLibraries.Any())
        {
            @foreach (var library in Model.VariableLibraries)
            {
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h3 class="h5 mb-0">@library.Name (ID: @library.Id)</h3>
                    </div>
                    <div class="card-body">
                        @if (library.Variables.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm table-hover">
                                    <thead>
                                        <tr>
                                            <th>Variable Name</th>
                                            <th>Value</th>
                                            <th style="width: 150px;">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var field in Model.ExpectedFields)
                                        {
                                            var hasValue = library.Variables.ContainsKey(field);
                                            var currentValue = hasValue ? library.Variables[field] : "";
                                            var sanitizedFieldId = $"{library.Id}-{field.GetHashCode()}";
                                            <tr class="@(hasValue ? "" : "table-secondary")">
                                                <td><strong>@field</strong></td>
                                                <td id="value-@sanitizedFieldId">@(hasValue ? currentValue : "(not set)")</td>
                                                <td>
                                                    <button type="button" class="btn btn-sm btn-primary" 
                                                            data-group-id="@library.Id" 
                                                            data-field-name="@field" 
                                                            data-field-id="@sanitizedFieldId"
                                                            onclick="showEditForm(this)">
                                                        Edit
                                                    </button>
                                                </td>
                                            </tr>
                                            <tr id="edit-form-@sanitizedFieldId" style="display: none;">
                                                <td colspan="3">
                                                    <form method="post" asp-page-handler="UpdateVariable" class="d-flex gap-2 align-items-center">
                                                        <input type="hidden" name="VariableGroupId" value="@library.Id" />
                                                        <input type="hidden" name="VariableName" value="@field" />
                                                        <div class="flex-grow-1">
                                                            <input type="text" name="VariableValue" class="form-control" value="@currentValue" placeholder="Enter new value" />
                                                        </div>
                                                        <button type="submit" class="btn btn-sm btn-success">Save</button>
                                                        <button type="button" class="btn btn-sm btn-secondary" 
                                                                data-field-id="@sanitizedFieldId"
                                                                onclick="hideEditForm(this)">Cancel</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                        @* Display other variables that are not in the expected list *@
                                        @foreach (var variable in library.Variables.Where(v => !Model.ExpectedFields.Contains(v.Key)))
                                        {
                                            var sanitizedFieldId = $"{library.Id}-{variable.Key.GetHashCode()}";
                                            <tr>
                                                <td>@variable.Key</td>
                                                <td id="value-@sanitizedFieldId">@variable.Value</td>
                                                <td>
                                                    <button type="button" class="btn btn-sm btn-primary" 
                                                            data-group-id="@library.Id" 
                                                            data-field-name="@variable.Key" 
                                                            data-field-id="@sanitizedFieldId"
                                                            onclick="showEditForm(this)">
                                                        Edit
                                                    </button>
                                                </td>
                                            </tr>
                                            <tr id="edit-form-@sanitizedFieldId" style="display: none;">
                                                <td colspan="3">
                                                    <form method="post" asp-page-handler="UpdateVariable" class="d-flex gap-2 align-items-center">
                                                        <input type="hidden" name="VariableGroupId" value="@library.Id" />
                                                        <input type="hidden" name="VariableName" value="@variable.Key" />
                                                        <div class="flex-grow-1">
                                                            <input type="text" name="VariableValue" class="form-control" value="@variable.Value" placeholder="Enter new value" />
                                                        </div>
                                                        <button type="submit" class="btn btn-sm btn-success">Save</button>
                                                        <button type="button" class="btn btn-sm btn-secondary" 
                                                                data-field-id="@sanitizedFieldId"
                                                                onclick="hideEditForm(this)">Cancel</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No variables in this library.</p>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted">No variable libraries found.</p>
        }
    </section>
</div>

<script>
    function showEditForm(button) {
        // Hide all other edit forms
        document.querySelectorAll('[id^="edit-form-"]').forEach(form => {
            form.style.display = 'none';
        });
        
        // Get the field ID from data attribute
        const fieldId = button.getAttribute('data-field-id');
        
        // Show the selected edit form
        const editForm = document.getElementById(`edit-form-${fieldId}`);
        if (editForm) {
            editForm.style.display = '';
        }
    }

    function hideEditForm(button) {
        const fieldId = button.getAttribute('data-field-id');
        const editForm = document.getElementById(`edit-form-${fieldId}`);
        if (editForm) {
            editForm.style.display = 'none';
        }
    }
</script>
